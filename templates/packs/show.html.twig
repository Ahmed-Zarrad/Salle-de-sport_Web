{% extends 'baseBack-Office.html.twig' %}

{% block title %}Packs {% endblock %}

{% block body %}
<div class="wrapper">
    <div class="sa4d25">
        <div class="container" style="margin-left: 5%">
    <h1>Packs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pack.id }}</td>
            </tr>
            <tr>
                <th>Pack_category</th>
                <td>{{ pack.Category }}</td>
            </tr>
            <tr>
                <th>Pack_amount</th>
                <td>{{ pack.packAmount }}</td>
            </tr>
            <tr>
                <th>Pack_duration</th>
                <td>{{ pack.packDuration }}</td>
            </tr>
            <tr>
                <th>Pack_expiration_date</th>
                <td>{{ pack.packExpirationDate ? pack.packExpirationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Pack_description</th>
                <td>{{ pack.packDescription }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('packs_index') }}">back to list</a>

    <a href="{{ path('packs_edit', {'id': pack.id}) }}">edit</a>

    {{ include('packs/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
