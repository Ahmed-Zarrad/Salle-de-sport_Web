{% extends 'baseBack-Office.html.twig' %}

{% block title %}Edit pack{% endblock %}

{% block body %}
<div class="wrapper">
    <div class="sa4d25">
        <div class="container" style="margin-left: 5%">


            <h1>Edit pack</h1>

            {% set flashbag_notices = app.session.flashbag.get('notice') %}
            {% if flashbag_notices is not empty %}
                <ul class ="msg">
                    {% for notice in flashbag_notices %}
                        <li> {{ notice }} </li>
                    {% endfor %}
                </ul>
            {% endif %}

    {{ include('packs/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('packs_index') }}">back to list</a>

    {{ include('packs/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
